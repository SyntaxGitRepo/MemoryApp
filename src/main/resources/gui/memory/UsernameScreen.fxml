<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.memory.UsernameScreenController"
            prefHeight="850.0" prefWidth="650.0"
            style="-fx-background-color: #1a1a1a; -fx-padding: 30;">
    <children>
        <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
            <children>
                <HBox fx:id="topBar" alignment="CENTER_LEFT" spacing="0" style="-fx-padding: 0 0 8 0; -fx-background-color: transparent;">
                    <children>
                        <Label fx:id="dummyUser" minWidth="120" style="-fx-padding: 0 0 0 8;"/>
                        <Button fx:id="dummyLogout" text="â†©" minWidth="32" visible="false" disable="true"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="exitBtn" text="X" style="-fx-background-color: transparent; -fx-text-fill: #e74c3c; -fx-font-size: 22px; -fx-font-family: Roboto; -fx-min-width: 38; -fx-min-height: 38; -fx-max-width: 38; -fx-max-height: 38; -fx-padding: 0; -fx-cursor: hand; -fx-border-color: transparent;"/>
                    </children>
                </HBox>
                <Label text="Enter your username:" style="-fx-text-fill: #fff; -fx-font-size: 18px; -fx-font-family: Roboto;"/>
                <TextField fx:id="usernameField" promptText="Username" maxWidth="220"
                           style="-fx-background-color: #222; -fx-text-fill: #fff; -fx-font-size: 15px; -fx-font-family: Roboto; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #555; -fx-border-width: 1; -fx-padding: 8 12;"/>
                <Button fx:id="continueBtn" text="Continue"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-family: Roboto; -fx-font-size: 15px; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 10 24; -fx-cursor: hand;"/>
                <Button fx:id="leaderboardBtn" text="Leaderboard"
                        style="-fx-background-color: #232323; -fx-text-fill: #fff; -fx-font-family: Roboto; -fx-font-size: 15px; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 10 24; -fx-cursor: hand;"/>
                <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 13px;"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
